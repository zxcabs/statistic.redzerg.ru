*{
	border:0px;
	margin:0px;
	padding:0px;
	color:#ffffff;
	font-family:Verdana,sans-serif;
	line-height:20px;
}

html, body{
	height:100%;
}

input {
	color: #000000;
}

li {
	width: 100%;
}

h1 a {
	text-decoration: none;
}

#bg{
	background:#000000 url('/images/bg.jpg') no-repeat center;
	height:100%;
	width:100%;
	position: fixed;
}

#top{width:100%;background-color:#555555;position:relative;top:0px;z-index:9999;text-align:left;}

#top span {
	margin-left: 3px;
	margin-right: 3px;
}

#middle{
	margin-left:auto;
	margin-right:auto;
	width:690px;
	position:relative;
	font-size:14px;
	top: 10px;
}

#middle .content-index {
	margin-left:auto;
	margin-right:auto;
	position:relative;
	text-align:center;
	width:690px;
}

#middle .content-middle {
	top: 130px;
}

.header{
	width: 100%;
	text-align: center;
}

#middle .content-index .players {
    display: inline-block;
    margin-left: 2px;
    margin-right: 2px;
    width: 280px;
}

#middle .pvs {
	display: inline-block;
}

#middle .content-index .submit {
    display: inline-block;
	width: 90px;
}

input[name=pl1], input[name=pl2], input[name=find] {
	width: 100%;
	height: 25px
}

#middle .result-pl1, #middle .result-pl2 {
	width: 280px;
	text-align: left;
	position: absolute;
}

#middle .content-index .submit input {
    height: 25px;
    position: relative;
}

#middle .content-about {
	margin-left:auto;
	margin-right:auto;
	position:relative;
	text-align:left;
	width:690px;
}

.ui-autocomplete {
	background: #000000;
	list-style: none;
	height: 200px;
	overflow: auto;
	padding: 5px;
	cursor: default;
	
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}

.ui-autocomplete li:hover {
	background: #ffffff;
	color: #000000;
	
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}

.ui-autocomplete li:hover a {
	color: #000000;
}

/**
 * Form result
 */
#form-result {
	margin-top: 10px;
	padding: 10px;
	background: #ffffff;
	color: #000000;
	
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	border-radius: 10px;
}

#form-result h2, #form-result p, #form-result div, #form-result span, #form-result ul, #form-result li, #form-result a {
	color: #000000;
}

#form-result li {
	list-style: none;
}

.pl1, .pl2 {
	width: 300px;
	display: inline-block;
}

#form-result .stat {
	margin-top: 10px;
}

/**
 * About pages
 */
.content-about {
	background: #ffffff;
	padding: 10px;
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	border-radius: 10px;
}

.content-about p, .content-about h3, .content-about a {
	color: #000000;
}

.content-about h3 {
	margin: 5px;
	margin-top: 10px;
}

@import('player_info')